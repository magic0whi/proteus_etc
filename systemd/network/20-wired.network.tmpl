{{ if index . .chezmoi.hostname "wireAdapterName" -}}
[Match]
Name={{ index . .chezmoi.hostname "wireAdapterName" }}

{{ if eq .chezmoi.hostname "PROTEUSNOTEBOOK" -}}
[Link]
RequiredForOnline=carrier
{{ end }}
[Network]
{{ if eq .chezmoi.hostname "PROTEUSNOTEBOOK" -}}
MACVTAP=macvtap0
DHCP=no
IPv6AcceptRA=no
LinkLocalAddressing=no
MulticastDNS=no
LLMNR=no
{{- else }}
DHCP=yes

[DHCPv4]
RouteMetric=10

[DHCPv6]
RouteMetric=10

[IPv6AcceptRA]
RouteMetric=10
{{ end }}{{ end -}}
